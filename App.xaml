<Application x:Class="Nico2PDF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- グローバルフォント設定 -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI, Yu Gothic UI, Meiryo UI, Arial"/>
        </Style>
        
        <!-- 絵文字用フォント設定 -->
        <Style x:Key="EmojiTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Emoji, Segoe UI Symbol, Segoe UI, Yu Gothic UI, Arial"/>
        </Style>
        
        <!-- グローバルスタイル -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontFamily" Value="Segoe UI, Yu Gothic UI, Meiryo UI, Arial"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI, Yu Gothic UI, Meiryo UI, Arial"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI, Yu Gothic UI, Meiryo UI, Arial"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI, Yu Gothic UI, Meiryo UI, Arial"/>
        </Style>
    </Application.Resources>
</Application>